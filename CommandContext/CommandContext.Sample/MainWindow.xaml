<Window x:Class="CommandContext_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:cmdbdg="clr-namespace:CommandContext;assembly=CommandContext"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525">
	<Grid x:Name="TheGrid">
		<StackPanel>
			<DockPanel Margin="10">
				<TextBlock DockPanel.Dock="Top" Text="MouseDown / MouseUp" />
				<Rectangle x:Name="rect" Height="30" Fill="Aqua" MouseDown="{cmdbdg:CommandBinding 'SayHi()'}" MouseUp="{cmdbdg:CommandBinding 'SayHi()'}"/>
			</DockPanel>
			<Button Margin="10" Content="Click" Click="{cmdbdg:CommandBinding 'SayHi()'}"></Button>
			<Button Margin="10" Content="Command" Command="{cmdbdg:CommandBinding 'SayHiTo(123)'}"></Button>
			<DockPanel Margin="10">
				<TextBlock DockPanel.Dock="Top" Text="Binding.SourceUpdated" />
				<TextBox Background="LightSteelBlue" Text="{Binding Input,Mode=TwoWay,NotifyOnSourceUpdated=True}" Binding.SourceUpdated="{cmdbdg:CommandBinding 'SayHiTo(Text)'}"/>
			</DockPanel>
		</StackPanel>
	</Grid>
</Window>
